    <fragment
        android:id="@+id/navigation_home"
        android:name="com.capstone.yusayhub.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_transactions"
        android:name="com.capstone.yusayhub.ui.transactions.TransactionFragment"
        android:label="@string/transactions"
